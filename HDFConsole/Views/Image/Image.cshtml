@{
    Layout = null;
}
@model HDFConsole.Models.HDFFile
<!DOCTYPE html>
<html>
<head>
    <meta charset='UTF-8'>
    <link rel="stylesheet" href="~/app.css" type="text/css" />
    <meta name='viewport' content='width=device-width'>
</head>
<body>
    <div class="contentDiv">
        <h2>@Model.Filename</h2>
        <div>
            <table class="modelTable" >
                <tr>
                    <th align="left">Property</th>
                    <th align="left">Value</th>
                </tr>
                <tr>
                    <td>Filename</td>
                    <td>@Model.Filename</td>
                </tr>
                <tr>
                    <td>Size (bytes)</td>
                    <td>@Model.Size</td>
                </tr>
                <tr>
                    <td>Created</td>
                    <td>@Model.Created</td>
                </tr>
                <tr>
                    <td>Last Modified</td>
                    <td>@Model.LastModified</td>
                </tr>
                <tr>
                    <td>Dataset Name</td>
                    <td>@Model.DatasetName</td>
                </tr>
            </table>
        </div>
        <h3>Image Data</h3>
        <div class="imageDiv">
         <img src="@($"data:image/png;base64,{Convert.ToBase64String(Model.ImageData)}")" alt="Image" />
        </div>
    </div>
</body>
</html>
