@using HDFConsole.Models
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: black;
            color: white;
            font-family: Verdana;
        }
        img {
            max-width: 100%;
            height: auto;
            border: solid;
            border-radius: 5px;
        }
        th {
            font-weight:bold;
        }
    </style>
</head>
<body>
    <div style='display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100vh;'>
@*         <p>@ViewData["Message"]</p>
        <img src='@ViewData["latestImage"]' alt='Image'> *@

        @foreach (HDFFile file in ViewData.Model)
        {
            <div>
                <h3>@file.Filename</h3>

                <table class="table" style="style=" text-align: left;">
                    <tr>
                        <th align="left">Property</th>
                        <th align="left">Value</th>
                    </tr>
                    <tr>
                        <td>Filename</td>
                        <td>@file.Filename</td>
                    </tr>
                    <tr>
                        <td>Size (bytes)</td>
                        <td>@file.Size</td>
                    </tr>
                    <tr>
                        <td>Created</td>
                        <td>@file.Created</td>
                    </tr>
                    <tr>
                        <td>Last Modified</td>
                        <td>@file.LastModified</td>
                    </tr>
                    <tr>
                        <td>Dataset Name</td>
                        <td>@file.DatasetName</td>
                    </tr>
                </table>
                <h3>Image Data</h3>
                <img src="@($"data:image/png;base64,{Convert.ToBase64String(file.ImageData)}")" alt="Image" />
            </div>
        }
    </div>
</body>
</html>
