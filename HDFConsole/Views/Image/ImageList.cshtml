@using HDFConsole.Models
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" href="~/app.css" type="text/css" />
</head>
<body>
    <div>
        <div class="pagination">
            @{
                var files = (List<HDFFile>)ViewData.Model;
            }
            @foreach (HDFFile file in files)
            {
                <a href="#">@files.IndexOf(file)</a>
            }
        </div>

        @foreach (HDFFile file in ViewData.Model)
        {
            <div>
                <h3>@file.Filename</h3>

                <table class="table">
                    <tr>
                        <th align="left">Property</th>
                        <th align="left">Value</th>
                    </tr>
                    <tr>
                        <td>Filename</td>
                        <td>@file.Filename</td>
                    </tr>
                    <tr>
                        <td>Size (bytes)</td>
                        <td>@file.Size</td>
                    </tr>
                    <tr>
                        <td>Created</td>
                        <td>@file.Created</td>
                    </tr>
                    <tr>
                        <td>Last Modified</td>
                        <td>@file.LastModified</td>
                    </tr>
                    <tr>
                        <td>Dataset Name</td>
                        <td>@file.DatasetName</td>
                    </tr>
                </table>
                <h3>Image Data</h3>
                <img src="@($"data:image/png;base64,{Convert.ToBase64String(file.ImageData)}")" alt="Image" />
            </div>
        }
    </div>
</body>
</html>
